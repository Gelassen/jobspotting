<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet href="/xsl/office.xsl" type="text/xsl"?>
<page>
  <name><%= CGI.escapeHTML(@office.name) %></name>
  <jobs>
    <% for job in @office.jobs %>
        <job>
          <title><%= CGI.escapeHTML(job[:title]) %></title>
          <uri><%= CGI.escapeHTML(job[:uri]) %></uri>
        </job>
    <% end %>
  </jobs>
</page>