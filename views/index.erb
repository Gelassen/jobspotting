<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet href="/xsl/index.xsl" type="text/xsl"?>
<page>
  <areas>
    <% for area in @areas.all %>
      <area>
        <name><%= area.name %></name>
        <total><%= area.total %></total>
        <link rel="see" href="/area/<%= area.id %>"/>
      </area>
    <% end %>
  </areas>
</page>